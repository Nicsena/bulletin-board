<!DOCTYPE html>
<html lang="en">

<head>
<%- include("./partial/header.ejs") %>
</head>

<body>

<%- include("./partial/navbar.ejs") %>

<div id="container" class="container-fluid p-3 my-3 rounded">

<p class="h3 text-center">Posts</p>
<p class="h5 text-center"><%= posts.length %> posts</p>

<div id="container" class="container p-3 my-3 rounded">
    <% if(!posts.length) { %>
        <p class="h5 text-center">There are no posts.</p>
    <% } %>
    <% if(posts.length) { %>
        <% posts.forEach(r => { %>
            <a href="/posts/<%= r["id"] %>" class="card post rounded">
                <div class="card-body" style="margin-bottom: 10px;"> 
                    <p class="h3"> <%= r["title"] %> </p>
                    <p class="h6"> <%= r["createdAt"] %> | <%= r["repliesAmount"] %> Replies <% if(r["readonly"] === "true") { %>| Read-only <% } %> <% if(r["server"] === "true") { %>| Server <% } %></p>
                    <p class="h6"> <pre><%= r["content"] %></pre>  </p>
                </div>
            </a>
            <% }) %>
    <% } %>
</div>

<%- include('./partial/footer.ejs') %>

</div>





</body>

</html>
