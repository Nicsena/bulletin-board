<!DOCTYPE html>
<html lang="en">

<head>
<%- include("./partial/header.ejs") %>
<script src="/js/post.js"></script>
</head>

<body>

<%- include("./partial/navbar.ejs") %>

<div id="container" class="container p-3 my-3 rounded text-center">

<p class="h3">New Post</p>

<form class="rounded p-1 my-3" id="post-form">
    <div class="alert text-center" id="message" style="display: inherit; text-overflow: wrap; margin-bottom: 5px;"></div>
    <div class="form-group">
      <input type="text" class="form-control" id="title" value="" placeholder="title">
    </div>
    <div class="form-group">
        <textarea type="text" name="description"  class="form-control" id="description" placeholder="Enter text here"></textarea>
    </div>
    <button id="PostBtn" type="submit" class="btn btn-dark btn-block mb-2">
      <span id="spinner" class="" style="visibility: inherit;" role="status" aria-hidden="true"></span>
      Make new Post
    </button>
  </form> 

</div>

  <%- include('./partial/footer.ejs') %>
  
</body>

</html>
